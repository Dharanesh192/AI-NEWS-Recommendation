{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "GNEWS_API_KEY": "@gnews_api_key",
    "NEWS_API_KEY": "@news_api_key",
    "GEMINI_API_KEY": "@gemini_api_key"
  },
  "regions": ["sin1"],
  "functions": {
    "app.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}